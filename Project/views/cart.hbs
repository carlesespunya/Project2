<h1>This is the shopping cart</h1>
<div class="cartContainer">
{{#if carritoItems}}
    {{#each carritoItems }}
        <div class="item-card">
            <h3>{{this.comicId.title}}</h3>
            <img src="{{this.comicId.img}}" alt="">
            <form action="/cart/{{_id}}/delete" method="post">
                <button type="submit">Delete Item</button>
            </form>
        </div>
    {{/each}}
        <form action="cart/checkout" method="post">
            <button type="submit">CHECKOUT</button>
        </form>
</div>
{{else}}
    <h2>Ooops, seems like your cart is empty ðŸ¥º</h2>
{{/if}}
</div>



